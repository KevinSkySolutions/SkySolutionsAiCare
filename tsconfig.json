{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["es5", "es6", "es2017","dom"],
        "pretty": true,
        "sourceMap": false,
        "importHelpers": true,
        "declaration": false,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "server/**/*",
        "server/spawn-server/server.ts"
    ],
    "exclude": [
        "**/node_modules",
        "**/dist",
        "**/client/**/*"
    ]
}